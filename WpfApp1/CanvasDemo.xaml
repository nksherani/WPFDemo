<Window x:Class="WpfApp1.CanvasDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="CanvasDemo" Height="450" Width="800">
    <Grid>
		<Canvas Background="LightCyan">
			<Rectangle Canvas.Left="10" Canvas.Top="15" Height="200" Width="200" Stroke="Black" StrokeThickness="10" Fill="Red" Canvas.ZIndex="2" />
			<Rectangle Canvas.Left="60" Canvas.Top="60" Height="200" Width="200" Stroke="Black" StrokeThickness="10" Fill="Blue" Canvas.ZIndex="1" />
			<Rectangle Canvas.Left="110" Canvas.Top="110" Height="200" Width="200" Stroke="Black" StrokeThickness="10" Fill="Green" Canvas.ZIndex="3" />
		</Canvas>
	</Grid>
</Window>
